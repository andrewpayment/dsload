{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES5",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    
    "allowJs": true,
    "noEmit": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "paths": {
      "@enums/*": [
        "src/lib/enums/*"
      ],
      "@models/*": [
        "src/lib/models/**/*",
        "src/lib/models/*"
      ],
      "@helpers/*": [
        "src/lib/helpers/**/*",
        "src/lib/helpers/*"
      ]
    },
    "typeRoots": [
      "src/types"
    ]
  },
  "include": ["src"],
}
